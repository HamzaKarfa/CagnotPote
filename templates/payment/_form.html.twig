{{ form_start(form,{ 'attr' : {   'method' : 'post', 'id' : 'payment-form'}} ) }}
    <h5>Nouveau Payement</h5>


    <p> {{ form_errors(form.payment.amount) }}</p>
    <div class="input-field col s12 l6">
        {{ form_widget(form.payment.amount, { 'attr' : {  'value' : valueAmount ,'class ':'validate ' }}) }}
        {{ form_label(form.payment.amount) }}
    </div>
    <div class="input-field col s12 l12">
       <p> {{ form_errors(form.participant.name) }}</p>
        {{ form_label(form.participant.name) }}
        {{ form_widget(form.participant.name, { 'attr' : { 'class ':'validate '}}) }}
    </div>
    <div class="input-field col s12 l6">
       <p> {{ form_errors(form.participant.email) }}</p>
        {{ form_label(form.participant.email) }}
        {{ form_widget(form.participant.email, { 'attr' : { 'class ':'validate '}}) }}
    </div>


    <p class=" col s12 l12">
        <label for="payment_participant_isAnonymous" >
            {{ form_widget(form.participant.isAnonymous, { 'attr' : {'class ':'validate ' } }) }}
            <span>Masquer mon identité auprès des autres participants</span>
        </label>
    </p>

    {#  PAIMENT FORM #}
    

    <div class="input-field col s12">
        <h5 class="center">Paiement</h5>
        <div class="form-row">
            <label for="card-element">
            Credit or debit card
            </label> 
            <div id="card-element">
            <!-- A Stripe Element will be inserted here. -->
            
            </div>
            <div id="card-errors" role="alert"></div>
        </div>
    </div>
  
   

    <div class="input-field col s12 l6 center-items">
        <a href="" class="btn btn-large waves-effect waves-light grey col s12">Annuler</a>
    </div> 
    <div class="input-field col s12 l6 center-items">
        <button class="btn btn-large waves-effect waves-light pink lighten-1 col s12" type="submit">
            {{ button_label|default('Participer') }}
            <i class="material-icons right">euro_symbol</i>
        </button>
    </div> 
{{ form_end(form) }} 